@model MvcBookStore.Models.Book

<script src="~/Scripts/jquery-ui-1.8.14.custom.min.js"></script>
<script src="~/Scripts/zeeScroll.js"></script>
<script type="text/javascript"></script>

<link href="~/CSS_contents/main.css" rel="stylesheet" />

