<!DOCTYPE html>

<html>
<head>
        <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
        @Styles.Render("~/bundles/css")
        @Scripts.Render("~/bundles/js")   
</head>
<body>
  <div id="header">
      
    <div class="float-right">   
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>      
      @*localization link is created here*@
         <div id ="culture"> 
             @*<a href="~/Views/Shared/_Layout">en</a> |
             <a href="~/culture/index">np</a>*@
          @Html.ActionLink("en","../home/method") 
          @Html.ActionLink("np","../home/method") 
         </div>
      </div>
    
       <div id="Text"> <h2>@MvcBookStore.Views.Home.HomeResource.ShopName | @MvcBookStore.Views.Home.HomeResource.ShopName2 </h2> </div> 

  </div>
    
    <div id="google_translate_element"></div><script type="text/javascript">
function googleTranslateElementInit() {
  new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
}
</script><script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
     
    <div id="menuwrapper">
         @Html.Partial("_Menu")
    </div>
  
    <div id="bodywrapper">
        @RenderBody()
    </div>

</body>
</html>
