@model IEnumerable<MvcBookStore.Models.writer>

<script type="text/javascript">
    $(document).ready(function(){
          $("#btnWriter").click(function () {
              $("#writerlist").slideToggle();
         });
    });
</script>

 <body>
     <div id="writer">
    <input type="button" value="Writer" id="btnWriter"/><br/>
    </div>
</body>    
