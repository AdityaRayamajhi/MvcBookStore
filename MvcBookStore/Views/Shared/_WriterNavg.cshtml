    <div id="writerlist">
@foreach (var item in Model) {
   
    
     <ul>        
         <li>   @Ajax.ActionLink(item.Writer, "Writershow",
                    new { id = item.WriterId },
                    new AjaxOptions
                        {
                          HttpMethod = "POST",
                          UpdateTargetId = "right",
                          InsertionMode = InsertionMode.Replace 
                         }) </li>
                      
       </ul>    
}
